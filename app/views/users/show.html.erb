<h1>Hello, <%= @user.username.capitalize %> !</h1>

<h3> You have made <%= pluralize(@user.reviews.count,"review") %></h3>
<% @user.reviews.each do |review| %>
    <strong>Movie:</strong> <%= link_to review.movie.title, movie_path(review.movie) %><br>
      
    <strong>Your Review:</strong> "<%= review.content %>" <br>
    <strong>Your Rating:</strong> <%= pluralize(review.rating,"star") %><br>

    <strong>Posted:</strong> <%= review.created_at.strftime("%B %d, %Y") %><br>
      
    <% if current_user == review.user %>
        <%= link_to "Edit", edit_user_review_path(current_user, review)  %>
        <%= link_to "Delete", user_review_path(current_user, review), method: :delete %><br>
    <% end %>
    <br>
<% end %>
