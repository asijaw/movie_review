<%= form_for @movie do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :year %><br>
    <%= f.number_field :year %><br>

    <%= f.label :genre %><br>
    <%= f.text_field :genre %><br>

    <%= f.fields_for :reviews, @movie.reviews.build do |review| %>
        <h3>Your Review:</h3>
        <%= review.label :content %><br>
        <%= review.text_area :content %><br>

        <%= review.label :rating %><br>
        <%= review.number_field :rating %><br>

        <%= review.hidden_field :user_id, value: current_user %>
    <% end %>

    <%= f.submit %>
<% end %>
    